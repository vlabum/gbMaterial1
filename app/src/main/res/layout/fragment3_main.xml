<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
             tools:context=".Fragment3">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_f3"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:text="fragment_notifications"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="240dp" android:layout_marginStart="132dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tv2_f3"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginVertical="128dp"
                android:layout_marginHorizontal="32dp"
                android:textSize="24sp"
                android:layout_gravity="top"
                android:text="hello" android:layout_marginTop="120dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="180dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:id="@+id/iv_f3"
                android:src="@drawable/heart_rate"
                app:layout_anchorGravity="bottom"
                app:layout_anchor="@id/tv_f3"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_f3"
                android:layout_marginTop="140dp" android:layout_marginStart="140dp"
                app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>